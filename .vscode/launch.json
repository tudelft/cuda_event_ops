{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "fileArguments",
            "description": "The arguments to send to the debugger",
            "type": "promptString",
            "default": "",
        },
        {
            "id": "cuda",
            "description": "CUDA device to use",
            "type": "promptString",
            "default": "0",
        }
    ],
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "console": "integratedTerminal",
            "request": "launch",
            "program": "${file}",
            "args": "${input:fileArguments}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "${input:cuda}"
            },
            "justMyCode": false
        }
    ]
}
